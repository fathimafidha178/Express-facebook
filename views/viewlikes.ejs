<!DOCTYPE html>
<html>
<head>
  <title>Likes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <h2>Users who liked this post:</h2>
    <ul class="list-group mt-3">
      <% if (likes.length > 0) { %>
        <% likes.forEach(like => { %>
          <li class="list-group-item">
            <a href="/profile/<%= like.user._id %>">
              <img src="/<%= like.user.photo %>" class="rounded-circle me-2" style="width: 30px; height: 30px;" />
              <%= like.user.firstname %> <%= like.user.surname %>
            </a>
          </li>
        <% }) %>
      <% } else { %>
        <li class="list-group-item text-muted">No likes yet.</li>
      <% } %>
    </ul>
  </div>
</body>
</html>
