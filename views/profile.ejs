<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= user.firstname %> <%= user.surname %> - Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f0f2f5;
    }
    .card {
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <!-- Profile Card -->
    <div class="card p-4 mb-5" style="max-width: 500px; margin: auto;">
      <div class="text-center">
        <img 
          src="/<%= user.photo %>" 
          class="rounded-circle mb-3" 
          width="150" 
          height="150" 
          alt="Profile Picture" 
          style="object-fit: cover;"
        />
        <h4><%= user.firstname %> <%= user.surname %></h4>
        <p class="text-muted">Email: <%= user.email %></p>
        <p>Date of Birth: <%= user.dob %></p>
        <p>Gender: <%= user.gender %></p>
      </div>

      <hr />

      <!-- Profile Photo Upload Form -->
      <form action="/profile/photo" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="photo" class="form-label">Change Profile Picture</label>
          <input 
            type="file" 
            name="photo" 
            id="photo" 
            class="form-control" 
            accept="image/*" 
            required 
          />
        </div>
        <button type="submit" class="btn btn-primary w-100">Upload New Picture</button>
      </form>
    </div>

    <!-- User Posts -->
    <h3 class="mb-4 text-center"><%= user.firstname %>'s Posts</h3>
    
    <% if (posts.length === 0) { %>
      <p class="text-center text-muted">No posts yet.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="border p-3 rounded mb-4 bg-white">
          <p><%= post.content %></p>

          <% if (post.img) { %>
            <img src="/<%= post.img %>" class="img-fluid rounded mb-2" style="max-width: 300px;" />
          <% } %>

          <p><strong><%= post.likes %> Likes</strong></p>

        </div>
      <% }) %>
    <% } %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



